@model IEnumerable<QorusShareLib.Models.DocumentModel>

@{
    ViewData["Title"] = "Document List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Document List</h1>

<p>
    <a asp-action="Create">Create New</a> |

    <a asp-action="RefreshDocumentList">Refresh List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastReviewed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastReviewed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DownloadDocument" asp-route-id="@item.Id">Download</a>
            </td>
        </tr>
}
    </tbody>
</table>